{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "target": "esnext",
    "resolveJsonModule": true,
    "outDir": "./",
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "noUncheckedIndexedAccess": true,
    "moduleDetection": "force",
    "module": "Preserve",
    "verbatimModuleSyntax": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "test"],
}